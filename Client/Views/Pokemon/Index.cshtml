@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<h1 class="mb-5">Pokedex</h1>
<table class="table table-dark mt-5">
     <thead>
         <tr>
             <th>No</th>
             <th>Nama</th>
             <th>Action</th>
         </tr>
     </thead>
     <tbody class=" tablePoke table-light" style="color:black">
         <tr>
             <td>1</td>
             <td>tessting</td>
             <td>
                <button class="btn btn-primary">Detail</button>
              </td>
         </tr>
     </tbody>
</table>

 <div class="modal fade" id="getPoke" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
     <div class="modal-dialog" role="document">
         <div class="modal-content">
             <div class="modal-header">
                 <h5 class="modal-title" id="exampleModalLabel">Pokemon Detail</h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                 </button>
             </div>
             <div class="modal-body" id="detailModal">
                 <div class="container">

                     <div class="text-center" id="detailImage">
                         <img src="" alt="" />
                     </div>
                     <div class="row" >
                         <span class="badge" style="font-size: 20px; margin: auto">pokemon</span>
                     </div>
                     <div class="text-center bg-secondary" style="color: white "><b>Detail</b></div>
                     <div style="color: black ">
                         <div class="row">
                             <div class="col"><b>NAME</b></div>
                             <div class="detailName col">Pokemon</div>
                         </div>
                         <div class="row">
                             <div class="col"><b>ABILITY</b></div>
                             <div class="ability col">Pokemon</div>
                         </div>
                         <div class="row">
                             <div class="col"><b>WEIGHT</b></div>
                             <div class="weight col">100</div>
                         </div>
                         <div class="row">
                             <div class="col"><b>HEIGHT</b></div>
                             <div class="height col">200</div>
                         </div>
                     </div>
                     <div class="text-center bg-secondary" style="color: white "><b>Stat</b></div>
                     <div style="color: black " id="stat">
                         
                     </div>
                 </div>
             </div>
                     <div class="modal-footer">
                         <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                     </div>
                 </div>
     </div>
 </div>

