@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<h1 class="mb-5">Tabel Employee</h1>
<table class="table mt-5 table-hover" id="tableEmployee">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>NIK</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Telepon</th>
            <th>Date</th>
            <th>University Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody class=" tablePoke" style="color: black">
        <tr>
        </tr>
    </tbody>
</table>

<div class="modal fade" id="getPoke" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Pokemon Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="detailModal">
                <div class="container">
                    <div class="text-center" id="detailImage">
                        <img src="" alt="" />
                    </div>
                    <div class="row text-center">
                        <div class="detailName col text-capitalize h3"><b>Pokemon</b></div>
                    </div>
                    <div class="row">
                        <span class="badge" style="font-size: 20px; margin: auto">pokemon</span>
                    </div>
                    <div class="text-center bg-secondary" style="color: white "><b>Detail</b></div>
                    <div style="color: black ">
                        <div class="row">
                            <div class="col"><b>Ability</b></div>
                            <div class="ability col">Pokemon</div>
                        </div>
                        <div class="row">
                            <div class="col"><b>Weight</b></div>
                            <div class="weight col">100</div>
                        </div>
                        <div class="row">
                            <div class="col"><b>Height</b></div>
                            <div class="height col">200</div>
                        </div>
                    </div>
                    <div class="text-center bg-secondary" style="color: white "><b>Stat</b></div>
                    <div style="color: black " id="stat">

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

